  <div class ='complete_form well'>
   <% form_builder = build_field_data(@form_answer.form, @form_answer) %>
      <% if form_builder %>
        <h2><%= form_answer.form.title %></h2>
        <%= form_tag complete_form_path(@form_answer.form), method: 'put'  do %>
        <% form_builder.each do |form| %>
              <div class='show_field'>
                <%= label_tag 'fields', form[0].humanize, class: form[2] %><br>
                <%= text_field_tag 'field', form[1], class: form[2] %>
              </div>
            <% end %>
            <%= button_to "Update Form Information", nil, id: 'update_all_answers', class: 'btn btn-warning' %>
          <% end %>
        <% end %>
    </div>
  </div>



 <%= render partial: "form", locals: { form_answer: @form_answer, field: @fields } %>



