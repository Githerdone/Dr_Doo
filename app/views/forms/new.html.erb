<div class='form_block'>
  <div class='well'>
    <%= form_for @form do |f| %>
      <%= f.submit 'Submit Form â†’', class: 'btn btn-primary btn-large' %>
      <h3><%= f.text_field :title, placeholder: 'Enter New Form Title Here' %></h3>
      <% if @form_elements %>
        <% @form_elements.each do |element| %>
          <%= text_field_tag nil, nil, placeholder: element.name.gsub('_',' ').capitalize  %>
          <%= hidden_field_tag 'fields[][element_id]', element.id %>
          <%= hidden_field_tag 'fields[][name', element.name %>
        <% end %>
      <% end %>
    <% end %>  
  </div>
</div>
  
