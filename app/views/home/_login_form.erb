<div id='loginModal' style='display: none' class="modal hide fade">
  <div class="modal-header">
    <h2>Sign in</h2>
  </div>
  <div class="modal-body">
    <div id="user_login_box">
    <%= form_for("user", :url => user_session_path, :html => {:id => "sign_in"}, :remote => true, :format => :json) do |f| %>

      <div><%= f.label :email %><br/>
      <%= f.text_field :email %></div>
      
      <div><%= f.label :password %><br/>
      <%= f.password_field :password %></div>
      
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
      <%#= f.submit 'Sign in' %>
      <%#= link_to "Forgot your password?", new_password_path('user') %>
    
</div>
  </div>
  <div class="modal-footer">
      <%= f.submit 'Sign in', :input_html => {:class => "btn btn-block btn-inverse"} %>
    <% end %>
    <!-- <button class="btn btn-block btn-inverse" type="submit">Login</button> -->
  </div>
</div>